<div class="container">
  <div class="row m-t-10">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <%= image_tag 'pm.svg', width: 70, height: 70, class: 'center-block' %> 
          <div class="text-center">
            <h5 class="m-t-10">
              <%= @user.name %>
            </h5>
            <span class="m-t-10">
              <a href="https://anonumos.co/<%= @user.slug %>"> anonumos.co/<%= @user.slug %></a>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if current_user == @user %>
    
    <div class="row m-t-40">
      <div class="col-md-12">
        <div class="card">
          <div class="text-center card-header">
            <span>
              <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                <path fill="#000000" d="M17,12V3A1,1 0 0,0 16,2H3A1,1 0 0,0 2,3V17L6,13H16A1,1 0 0,0 17,12M21,6H19V15H6V17A1,1 0 0,0 7,18H18L22,22V7A1,1 0 0,0 21,6Z" />
              </svg>
            </span>
            <span class="conv_header">Conversations</span>
          </div>
          <div class="card-body">
            <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              a
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              b
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
              c
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% else %>

    <div class="row">
      <div class="col-md-2 col-lg-2"></div>
      <div class="col-md-8 col-lg-8">
        <%= form_for(@message, url: messages_path) do |f| %>
          <div class="form-group m-t-25">
            <%= f.text_area :text, class: "form-control area-rounded", placeholder: 'Say something awesome', rows: 7 %>
          </div>
          <%= f.submit "Send", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>