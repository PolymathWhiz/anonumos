<% if flash[:notice] %>
	<div class="alert alert-info">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			&times;
		</button>
		<%= notice %>
	</div>
<% end %>

<% if flash[:alert] %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			&times;
		</button>
		<%= flash[:alert] %>
	</div>
<% end %>